generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  password  String?
  image     String?
  createdAt DateTime @default(now())
  trips     Trip[]
}

model Trip {
  id          String   @id @default(cuid())
  destination String
  days        Int
  budget      String
  group       String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  data        Json 
}
